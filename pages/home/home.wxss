/* pages/home/home.wxss */
@import "../../component/message/message.wxss";
page {
  background: rgb(3, 37, 65);
}

.home-img {
  display: flex;
  justify-content: center;
  box-sizing: border-box;
  margin-top: 20rpx;
  top: 0;
  padding: 10rpx;
  align-items: center;
}

.home-log {
  width: 450rpx;
  height: 200rpx;
}

.home-search-bar {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 150rpx;
  margin-left: 50rpx;
  margin-right: 50rpx;
  box-sizing: border-box;
  top: 0;
  left: 0;
  z-index: 999;
  height: 80rpx;
  padding: 10rpx;
  padding-left: 30rpx;
  background-color: #ffffff;
  box-shadow: 0 4px 8px 0 rgba(255, 255, 255, 0.4), 0 4px 8px 0 rgba(255, 255, 255, 0.4);
  border-radius: 40rpx;
}

.home-search-text {
  display: inline-block;
  width: 100%;
  height: 60rpx;
  margin-right: 190rpx;
  background-color: #fff;
  background-position: 20rpx center;
  background-repeat: no-repeat;
  background-size: 50rpx;
  border-radius: 10rpx;
}

.home-search-button {
  background: -webkit-linear-gradient(left, rgb(29, 211, 172), rgb(2, 181, 226));
  width: 80rpx;
  height: 80rpx;
  box-sizing: border-box;
  border-radius: 40rpx;
  position: absolute;
  right: 50rpx;
  font-size: 30rpx;
  justify-content: center;
  align-items: center;
  color: #fff;
}
.home-login{
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 100rpx;
  margin-bottom: 100rpx;
  padding-bottom: 50rpx;
  margin-left: 100rpx;
  margin-right: 100rpx;
  box-sizing: border-box;
}
.home-login-text{
  font-size: 30rpx;
  color: white;
  font-weight: bold;
  line-height: 180%;
}

.home-login-btn{
  width: 80rpx;
  height: 80rpx;
  box-sizing: border-box;
  font-size: 40rpx;
  color: #fff;
  font-weight: bold;
  background: rgb(3, 37, 65);
}

.home-section{
  display: flex;
  margin-top: 80rpx;
  margin-left: 50rpx;
  margin-right: 50rpx;
  box-sizing: border-box;
  align-items: center;
  justify-content: center;
}

.home-section-title{
  color: #fff;
  font-size: 40rpx;
  font-weight: 600;
  white-space: nowrap;
  font-family: 'Source Sans Pro', Arial, sans-serif;
  text-align: center;
}

.home-section-day{
  background-color: unset;
  font-size: 30rpx;
  color: #ffffff;
  text-align: left;
  position: relative;
  left: -50rpx;
}

.home-section-week{
  background-color: unset;
  font-size: 30rpx;
  color: #ffffff;
  text-align: left;
  position: relative;
  left: -200rpx;
}

.home-film{
  box-sizing: border-box;
  height: 200rpx;
  white-space: nowrap;
  overflow-x: auto;
  margin: 15rpx 30rpx;
  flex-direction: row;
  justify-content: space-between;
}

.section-item{
  display: inline-block;
  width: 250rpx;
  overflow: hidden;
  padding: 10rpx;
}

.section-img{
  width: 250rpx;
  height: 140rpx;
  border-radius: 8rpx;
  border: 1px solid ;
}
.section-title{
  color: #ffffff;
  text-align: center;
  font-size: 18rpx;
  font-weight: 100;
  white-space: nowrap;
}
.home-user{
  width: 100%;
  height: 200rpx;
  display: flex;
  justify-content: center;
  box-sizing: border-box;
  align-items: center;
  margin-top: 50rpx;
}
.home-user-name{
  padding-left: 60rpx;
  padding-right: 60rpx;
  height: 80rpx;
  background-color: #fff;
  text-align: center;
  color: rgb(67, 185, 229);
  border-radius: 8rpx;
  box-shadow: 0 4px 8px 0 rgba(255, 255, 255, 0.4);
  font-size: 30rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
}