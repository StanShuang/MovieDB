/* pages/detail/tvDetail/tvDetail.wxss */
.detail {
  box-sizing: border-box;
  width: 750rpx;
  justify-content: space-between;
}
.det-top{
  position: relative;
  background: #032541;
}
.top-action{
  box-sizing: border-box;
  position: absolute;
  width: 100%;
  height: 400rpx;
  top: 0;
  right: 0;
  display: flex;
  flex-direction: row;

}
.top-img-bac{
  width: 100%;
  filter: blur(8px);
  height: 400rpx;
}
.top-cover {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-left: 10rpx;
}
.top-action-img {
  width: 266rpx;
  height: 380rpx;
  border-radius: 8rpx;
}

.top-title-item {
  margin-left: 10rpx;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
  color: #fff;
  height: 100%;
}

.top-title{
  font-size: 30rpx;
  font-weight: 800;
}
.top-tab{
  display: flex;
  flex-direction: row;
  color: #ffffff;
  font-size: 23rpx;
  font-weight: 400;
  padding-top: 5rpx ;
  margin-top: 5rpx;
}
.top-tab-dot{
  font-weight: 800;
}
.top-tagline{
  margin-top: 10rpx;
  font-size: 24rpx;
  color: grey;
  font-weight: 600;
}

.cast{
  box-sizing: border-box;
  height: 350rpx;
  white-space: nowrap;
  overflow-x: auto;
  margin: 15rpx 30rpx;
  flex-direction: row;
  justify-content: space-between;
  background-color: #e4e4e4;
}
.cast-item{
  display: inline-block;
  width: 175rpx;
  overflow: hidden;
  padding: 10rpx;
}

.cast-img{
  width: 175rpx;
  height: 250rpx;
  border-radius: 8rpx;
  border: 1px white solid;
}
.cast-name{
  color: #000000;
  text-align: center;
  font-size: 20rpx;
  font-weight: 400;
  white-space: nowrap; 
}

.cast-character{
  color: #000000;
  text-align: center;
  font-size: 14rpx;
  font-weight: 200;
  white-space: nowrap; 
}